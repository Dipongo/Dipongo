<div class="container-log">
  <div class="content-log-sign">
    <div class="form-log-sign">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, label: 'PrÃ©nom', required: true %>
          <%= f.input :last_name, label: 'Nom', required: true %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password,label: 'Mot de passe', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation,label: 'Mot de passe',  required: true %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Sign up", class:"btn-log btn-lg" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

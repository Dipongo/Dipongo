<div class="wide-container-solution">
  <div class="solution-content">
    <div class="solution-title">
      <p class="text-center solution-font">Ta jolie solution!</p>
    </div>
    <div class="photo-solution text-center">
      <% if @solution&.photo? %>
        <div class="solution-user-picture text-center">
          <%= cl_image_tag @solution.photo.path, width: 300, height: 300%>
        </div>
      <% end %>
    </div>
    <div class="solution-btn text-center">
      <%= link_to image_tag("http://res.cloudinary.com/dipongo/image/upload/v1508582599/Composants/bouton-nouvelle-histoire.png"), universe_path(@story.universe)%>
    </div>
    <p class="text-center solution-font">Toutes vos jolies id√©es...</p>
  </div>
    <div class="row">
      <% @story.solutions.reject { |solution| solution == @solution }.each do |solution| %>
        <div class="col-xs-4 text-center solution-pics">
          <% if solution.photo %>
            <%= cl_image_tag solution.photo.path, width: 250, height: 250, data: { toggle: "modal", target: "#modalImage-#{solution.id}" } %>
          <% end %>
          <!-- The Modal Image -->
          <div id="modalImage-<%= solution.id %>" class="modal fade">
            <button type="button" class="close" data-dismiss="modal">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= cl_image_tag solution.photo&.path, width: 500  %>
            <div class="desc"><%= solution.user.name.capitalize %> <%= solution.user.age %> ans</div>
          </div>
        </div>
      <% end %>
    </div>

  <!-- Modal Felic-->
  <div id="modalFelic" class="modal fade" role="dialog">
    <button type="button" class="close" data-dismiss="modal">
      <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <p class="text-title text-center">Bravo! <%= @user.name.capitalize %></p>
          <p class="text-thinks text-center">Merci pour ta jolie solution !</p>
        </div>
      </div>
    </div>
  </div>

</div>

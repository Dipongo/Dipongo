<div class="wide-container">
  <div class="contain">
    <div class="row">
      <h1 class="text-center">Votre Photo</h1>
      <div class="col-xs-12 col-sm-6 text-center">

        <% if @solution&.photo? %>
          <%= cl_image_tag @solution.photo.path, width: 200, height: 200, crop: :fill %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-6 btn-next-story text-center">
        <%= link_to "Next Story", universe_path(@story.universe), class: "btn btn-primary"%>
      </div>
        <h2 class="text-center">Autres Photo</h2>
        <% @story.solutions.reject { |solution| solution == @solution }.each do |solution| %>
          <% if solution.photo %>
            <div class="col-xs-4 col-sm-4">
              <div class="card-solution">
                <%= cl_image_tag solution.photo.path, width: 150, height: 150, crop: :fill %>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>

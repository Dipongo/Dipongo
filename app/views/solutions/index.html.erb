<div class="container">
  <div class="contain">
    <div class="row">
      <div class="col-xs-12">
        <h1>Votre Photo</h1>
        <% if @solution.photo? %>
          <%= cl_image_tag @solution.photo.path, width: 200, height: 200, crop: :fill %>
        <% end %>

        <%= link_to "Next Story", universe_path, class: "btn btn-primery"%>

        <h2>Autres Photo</h2>

        <% @solution.each do |photo| %>
          <div class="col-xs-4">
            <div class="card-solution">
              <%= cl_image_tag photo.path, width: 100, height: 100, crop: :fill %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

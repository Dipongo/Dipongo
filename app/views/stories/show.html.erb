<div class="wide-container">
  <div class="story-div">
    <div class="text-center">
      <%= cl_image_tag @page.photo.path, width: 300, height: 300, crop: :fill %>
    </div>
    <div class="text-center">
      <%= @page.content %>
    </div>
  </div>
  <div class="pagination">
    <% if @prev_page %>
      <%= link_to "<", story_path(@story, { page: @prev_page.position }),class: "btn-switch"%>
    <% end %>

    <%= link_to "Back to #{@story.universe.name}", @story.universe, class: "btn btn-success" %>

    <% if @next_page %>
      <%= link_to ">", story_path(@story, { page: @next_page.position }), class: "btn-switch" %>
    <% else %>
      <%= link_to '', new_story_solution_path(@story), class: "btn btn-success camera" %>
    <% end %>
  </div>
</div>

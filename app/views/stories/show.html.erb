<div class="wide-container-page-<%= @universe.name.downcase %>">
  <div class="story-div">
    <div class="story-image">
      <%= cl_image_tag @page.photo.path, width: 512, crop: :fill %>
    </div>
    <div class="story-text text-center scroll">
      <%= @page.content %>
    </div>
  </div>
  <div class="pagination">
    <% if @next_page && @prev_page %>
      <%= link_to "", story_path(@story, { page: @prev_page.position }),class: "btn-switch arrow-left"%>
      <div class="pongo-animation">
        <%= cl_image_tag "http://res.cloudinary.com/dipongo/image/upload/v1505997861/Composants/pongo.png", width: 100, data: { toggle: "modal", target: "#tip-Modal" } %>
      </div>
      <%= link_to "", story_path(@story, { page: @next_page.position }), class: "btn-switch arrow-right" %>

    <% elsif @next_page %>
      <p class="space-p"> </p>
      <p class="space-p"> </p>
      <%= link_to "", story_path(@story, { page: @next_page.position }), class: "btn-switch arrow-right" %>

    <% else %>
      <%= link_to "", story_path(@story, { page: @prev_page.position }),class: "btn-switch arrow-left"%>
      <%= link_to "", new_story_solution_path(@story), class: "camera btn-camera" %>
      <p class="space-p"> </p>
    <% end %>
  </div>

<!-- modal -->

  <div class="modal" id="tip-Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-="false">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Modal title</h4>
        </div>
        <div class="modal-body">
          ...
        </div>
      </div>
    </div>
  </div>
</div>
